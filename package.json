{
  "name": "clampwind",
  "version": "0.2.4",
  "description": "A PostCSS plugin to create fluid clamp values for any Tailwind CSS utility",
  "license": "Apache-2.0",
    "keywords": [
    "tailwindcss",
    "clamp",
    "fluid",
    "variants",
    "responsive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danieledep/clampwind.git"
  },
  "bugs": {
    "url": "https://github.com/danieledep/clampwind/issues"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/clampwind.esm.js",
  "exports": {
    "require": "./dist/clampwind.cjs.cjs",
    "import": "./dist/clampwind.esm.js",
    "default": "./dist/clampwind.esm.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "postcss": "^8.4.39",
    "esbuild": "^0.25.6"
  },
  "scripts": {
    "dev": "node scripts/build.js --watch",
    "build": "node scripts/build.js"
  }
}
